extends layout

block content

  body#page-top.index
  nav#mainNav.navbar.navbar-default.navbar-custom.navbar-fixed-top
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header.page-scroll
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            Menu
            i.fa.fa-bars

          a.navbar-brand.page-scroll(href='/') FinSense

        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.hidden
              a(href='#page-top')

            li
              a.page-scroll(href='/success') Home
            li
              a.page-scroll(href='/logout') Logout
        .navbar-collapse
      .container-fluid
    header
      .container
        .intro-text
          .intro-lead-in(style="text-shadow: 2px 2px 8px #000;") Welcome To FinSense!

          .intro-heading(style="text-shadow: 2px 2px 8px #000;") It&apos;s Nice To Meet You

          a.page-scroll.btn.btn-xl(href='/authorize_user')
            | Sign in with Instagram
            span.fa.fa-instagram

  section#team.bg-light-gray
    .container
      .row
        .video-container
          iframe(src='http://player.vimeo.com/video/18776121?title=0&byline=0&portrait=0', width='100%', height='100%', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='')
  footer
    .container
      .row
        .col-md-6
          span.copyright Copyright &copy; Opportunity Hack PayPal San Jose 2016
  // jQuery
  script(src='vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='vendor/bootstrap/js/bootstrap.min.js')
  // Plugin JavaScript
  script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
  // Theme JavaScript
  script(src='js/agency.min.js')
